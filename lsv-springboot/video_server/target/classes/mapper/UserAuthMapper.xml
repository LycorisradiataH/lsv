<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hdiata.mapper.UserAuthMapper">

    <select id="countUser" resultType="java.lang.Integer">
        SELECT
        count( 1 )
        FROM
        user_auth ua
        LEFT JOIN user_info ui ON ua.user_info_id = ui.id
        <where>
            <if test="condition.keywords != null">
                nickname like concat('%', #{condition.keywords}, '%')
            </if>
            <if test="condition.loginType != null">
                and login_type = #{condition.loginType}
            </if>
        </where>
    </select>

    <select id="listUsers" resultMap="UserBackMap">
        SELECT
        ua.id,
        user_info_id,
        avatar,
        nickname,
        login_type,
        r.id AS role_id,
        role_name,
        ip_address,
        ip_source,
        ua.gmt_create,
        last_login_time,
        ui.is_disable
        FROM
        (
        SELECT
        id,
        avatar,
        nickname,
        is_disable
        FROM
        user_info
        <where>
            <if test="condition.loginType != null">
                id in
                (
                SELECT
                user_info_id
                FROM
                user_auth
                WHERE
                login_type = #{condition.loginType}
                )
            </if>
            <if test="condition.keywords != null">
                and nickname like concat('%', #{condition.keywords}, '%')
            </if>
        </where>
        LIMIT #{current}, #{size}
        ) ui
        LEFT JOIN user_auth ua ON ua.user_info_id = ui.id
        LEFT JOIN user_role ur ON ui.id = ur.user_id
        LEFT JOIN role r ON ur.role_id = r.id
    </select>

    <resultMap id="UserBackMap" type="com.hdiata.pojo.dto.UserBackDTO">
        <id column="id" property="id"/>
        <result column="user_info_id" property="userInfoId"/>
        <result column="avatar" property="avatar"/>
        <result column="nickname" property="nickname"/>
        <result column="login_type" property="loginType"/>
        <result column="ip_address" property="ipAddress"/>
        <result column="ip_source" property="ipSource"/>
        <result column="gmt_create" property="gmtCreate"/>
        <result column="last_login_time" property="lastLoginTime"/>
        <result column="is_disable" property="isDisable"/>
        <collection property="roleList" ofType="com.hdiata.pojo.dto.UserRoleDTO">
            <id column="role_id" property="id"/>
            <id column="role_name" property="roleName"/>
        </collection>
    </resultMap>

</mapper>